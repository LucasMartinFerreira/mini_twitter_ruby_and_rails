<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Ver info usuaio', user , class: "btn btn-default"%></td>
        <td><%= link_to 'Edit Without $Ajax', edit_user_path(user) , class: "btn btn-default"%></td>
        <td data-toggle="modal" data-target="#exampleModal"><%= link_to 'Edit with $Ajax', '#',  :onclick => "show_user('#{user.id}')", data: { toggle: "modal", target: "#ajax-modal" } %></td>
        <td><%= link_to 'Eliminar ', user, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-default"%></td>
        <td data-toggle="modal" data-target="#modalPostUsers"><%= link_to "Ver Post de #{user.name}", '#',  :onclick => "getPostsUser('#{user.id}')", data: { toggle: "modal", target: "#ajax-modal" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

